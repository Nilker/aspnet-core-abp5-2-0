@model XyAuto.It.Web.Models.Account.SendSecurityCodeViewModel
<div class="m-login__signin">
    <div class="m-login__head">
        <h3 class="m-login__title">
            @L("SendSecurityCode")
        </h3>
    </div>
    <form class="m-login__form m-form" asp-action="SendSecurityCode" method="post">
        <p>@L("SendSecurityCode_Information")</p>

        @Html.Hidden("returnUrl", Model.ReturnUrl)
        @Html.Hidden("rememberMe", @Model.RememberMe)

        <div class="form-group m-form__group">
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new
           {
               @class = "form-control",
               size = 1
           })
        </div>

        <div class="m-login__form-action">
            <input type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" value="@L("Submit")" />
        </div>
    </form>
</div>
